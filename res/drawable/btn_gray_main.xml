<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid 
                android:color="#ffffff" />
            <stroke 
                android:width="5dp"
                android:color="#e7e7e8" />
            <corners 
                android:radius="5dp" />
        </shape>
    </item>

     <item android:state_enabled="false" >
        <shape>
            <gradient 
                android:startColor="#989898"
                android:endColor="#494949"
                android:angle="270" />
            <stroke 
                android:width="1dp"
                android:color="#494949" />
            <corners 
                android:radius="4dp" />
        </shape>
    </item> 
    
    <item>
        <shape>
            <gradient 
				android:startColor="#f1f1f2"
				android:centerColor="#e7e7e8"
				android:endColor="#aaaaaa"
				android:angle="315" />
            <stroke 
                android:width="5dp"
                android:color="#dddddd" />
            <corners 
                android:radius="5dp" />
        </shape>
    </item>
       
</selector>
