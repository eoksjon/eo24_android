<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid 
                android:color="#70c656" />
            <stroke 
                android:width="5dp"
                android:color="#53933f" />
            <corners 
                android:radius="3dp" />
            <padding 
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

     <item android:state_enabled="false" >
        <shape>
            <gradient 
                android:startColor="#989898"
                android:endColor="#494949"
                android:angle="270" />
            <stroke 
                android:width="5dp"
                android:color="#494949" />
            <corners 
                android:radius="4dp" />
            <padding 
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item> 
    
    <item>
        <shape>
            <gradient 
                android:startColor="#ccffcc"
                android:endColor="#66cc66"
                android:angle="270" />
            <stroke 
                android:width="5dp"
                android:color="#99ff99" />
            <corners 
                android:radius="4dp" />
            <padding 
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
       
</selector>
