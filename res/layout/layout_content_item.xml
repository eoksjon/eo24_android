<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_content_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/content_item"
    android:focusable="true"
    android:clickable="true"
    android:paddingBottom="@dimen/item_vertical_margin"
    android:paddingLeft="@dimen/item_horizontal_margin"
    android:paddingRight="@dimen/item_horizontal_margin"
    android:paddingTop="@dimen/item_vertical_margin" >

    <ImageView
        android:id="@+id/imgThumb"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textInfo"
        android:layout_alignTop="@+id/imgThumb"
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imgStars"
        android:background="@drawable/content_item_price"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="0.00 â‚¬" />

    <TextView
        android:id="@+id/textInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgStars"
        android:layout_toRightOf="@+id/imgThumb"
        android:text="Info line1"
        android:textColor="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/imgStars"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignLeft="@+id/textInfo"
        android:layout_below="@+id/textDescription"
        android:paddingRight="10dp"
        android:src="@drawable/stars_222_32" />

</RelativeLayout>
