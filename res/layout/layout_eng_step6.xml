<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_eng_step6"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
	android:background="@drawable/gradient_white"
    tools:context="com.eoksjon24.NewAuctionActivity$PlaceholderFragment" >
	
	<LinearLayout
	    android:id="@+id/layoutStep6"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
		android:background="@drawable/header_purple" >	    

		<TextView
		    android:id="@+id/txtStep6"
		    style="@style/HeaderAuctionText"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/text_step6"
		    android:textAllCaps="true"
		    android:textSize="12sp" />		
	</LinearLayout>

    <Button
        android:id="@+id/step6_end_button"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_blue"
        android:minHeight="32dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:enabled="false"
        android:text="@string/text_step_add_auction" />
						
	
</LinearLayout>
		    
