<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eoksjon24"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" >
    </uses-feature>

    <application
        android:name="com.eoksjon24.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.eoksjon24.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.eoksjon24.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.eoksjon24.AuthActivity"
            android:label="@string/title_activity_auth" >
        </activity>
        <activity
            android:name="com.eoksjon24.RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.eoksjon24.BrowseActivity"
            android:label="@string/title_activity_browse" >
        </activity>
        <activity
            android:name="com.eoksjon24.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name="com.eoksjon24.AuctionActivity"
            android:label="@string/title_activity_auction" >
        </activity>
        <activity
            android:name="com.eoksjon24.NewAuctionActivity"
            android:label="@string/title_activity_new_auction" >
        </activity>
        <activity
            android:name="com.eoksjon24.InboxActivity"
            android:label="@string/title_activity_inbox" >
        </activity>
    </application>

</manifest>
